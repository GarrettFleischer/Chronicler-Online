{
  "name": "chronicler",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "setx TEST_WATCH 1 && meteor test --once --driver-package meteortesting:mocha && setx TEST_WATCH 0",
    "test-app": "setx TEST_WATCH 1 && meteor test --full-app --driver-package meteortesting:mocha && setx TEST_WATCH 0",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.51",
    "bcrypt": "^3.0.0",
    "dagre": "^0.8.2",
    "debounce": "^1.1.0",
    "eslint-plugin-destructuring": "^2.1.0",
    "measure-text": "0.0.4",
    "meteor-node-stubs": "^0.4.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-mounter": "^1.2.0",
    "react-sizes": "^1.0.4",
    "react-svg-pan-zoom": "^2.17.0",
    "semantic-ui-react": "^0.82.1",
    "simpl-schema": "^1.5.0"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-meteor": "^5.0.0",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-react": "^7.10.0",
    "postcss": "^6.0.22",
    "postcss-easy-import": "^3.0.0",
    "postcss-load-config": "^1.2.0"
  },
  "babel": {
    "plugins": [
      "transform-class-properties"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-easy-import": {},
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
